# Server Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/leadconnectdb

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_NAME=leadconnect-session

# Authentication
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=LeadConnect

# Email Configuration (Alternative - Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Two-Factor Authentication
TWO_FACTOR_SERVICE_NAME=LeadConnect
TWO_FACTOR_ISSUER=YourCompany

# Stripe Configuration (if using payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# AWS Configuration (for production deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# S3 Configuration (if using file uploads)
S3_BUCKET_NAME=your-s3-bucket-name
S3_REGION=us-east-1

# Redis Configuration (if using caching/sessions)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_2FA=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_NOTIFICATIONS=true

# Webhook URLs (if using external services)
WEBHOOK_URL=https://your-webhook-endpoint.com

# API Keys for external services
EXTERNAL_API_KEY=your-external-api-key

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
